<% layout("./layouts/boilerplate.ejs") %>
<main>
    <div class="error-box">
        <h1 class="error-title">
            Error: <%= message %>
        </h1>
  
        <a href="/home" onclick="window.location.href='/listings'; return false;" class="error-button">
            Home
        </a>
    </div>
    
</main>

<style>
  
.error-box {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column; 
    height: 500px;
    background-color: #004d40; 
    padding: 40px 30px;
    border-radius: 20px;
    margin-top: 120px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px solid rgba(0, 150, 136, 0.4); 
    text-align: center;
    box-shadow: 0 8px 20px rgba(0, 150, 136, 0.3);
    animation: fadeIn 1s ease-in-out;
}


.error-title {
    font-size: 2.5rem;
    color: #e0f2f1; 
    font-weight: bold;
    margin-bottom: 20px;
    letter-spacing: 1px;
}

.error-button {
    display: inline-block;
    padding: 12px 35px;
    background: linear-gradient(45deg, #004d40, #00796b); 
    color: #ffffff;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    border-radius: 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 4px 10px rgba(0, 150, 136, 0.3);
    transition: background 0.3s ease, transform 0.2s ease;
    margin-top: 20px; 
}

.error-button:hover {
    background: linear-gradient(45deg, #00796b, #004d40);
    transform: translateY(-2px);
}


@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

</style>
